combine<-expand.grid(ss=c('6.1','6.8','5.8'),
battery=c('5000','4500','3000'),
colour=c('black','white','blue'),
price=c('25000','28000','30000'),
motherboard=c('ubon','snapdragon','mediatech'))
combine
#install conjoint package
install.packages('conjoint')
library(conjoint)
#top 15 combinations are selected
test<-caFactorialDesign(combine,type="fractional",cards=15)
test
levels<-c('6.1','6.8','5.8',
'5000','4500','3000',
'black','white','blue',
'25000','28000','30000',
'ubon','snapdragon','mediatech')
levels
#collect feedback for the above 15 slected products
pref<-read.csv(file.choose())
Conjoint(pref,test,levels)
combine<-expand.grid(ss=c('6.1','6.8','5.8'),
